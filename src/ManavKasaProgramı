import java.util.Scanner;

public class ManavKasaProgramı {
	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		double armut = 2.14;
		double elma = 3.67;
		double domates = 1.11;
		double muz = 0.95;
		double patlıcan = 5.00;

		System.out.print("Kaç kilo armut aldınız: ");
		float akg = scanner.nextFloat();
		System.out.print("Kaç kilo elma aldınız: ");
		float ekg = scanner.nextFloat();
		System.out.print("Kaç kilo domates aldınız: ");
		float dkg = scanner.nextFloat();
		System.out.print("Kaç kilo muz aldınız: ");
		float mkg = scanner.nextFloat();
		System.out.print("Kaç kilo patlıcan aldınız: ");
		float pkg = scanner.nextFloat();

		double ücret = (armut * akg) + (ekg * elma) + (domates * dkg) + (muz * mkg) + (patlıcan * pkg);

		System.out.println("Toplam tutar: " + ücret);

	}

}
