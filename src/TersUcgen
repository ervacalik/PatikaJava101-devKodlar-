import java.util.Scanner;

public class TersUcgen {
	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		System.out.print("Basamak sayısını girin: ");
		int n = scanner.nextInt();
		for (int i = n - 1; i >= 0; i--) {
			for (int j = 0; j < (2 * i) + 1; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
